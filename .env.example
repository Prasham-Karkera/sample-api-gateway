# Required environment variables for ka-chow-api-gateway
# Copy this file to .env for local development. NEVER commit .env.

# Application
GW_ENV=development
GW_APP_VERSION=1.0.0

# JWT Authentication (MUST match the secret used by user-service)
GW_JWT_SECRET_KEY=your-256-bit-secret-replace-this-in-all-envs
GW_JWT_ALGORITHM=HS256
GW_JWT_EXPIRY_SECONDS=3600

# Rate Limiting
GW_RATE_LIMIT_RPM=120

# CORS (comma-separated origins; use * for development only)
GW_CORS_ORIGINS=["*"]

# Downstream service URLs (use service names in docker-compose/k8s)
GW_USER_SERVICE_URL=http://user-service:8001
GW_ORDER_SERVICE_URL=http://order-service:8002
GW_INVENTORY_SERVICE_URL=http://inventory-service:8003
GW_NOTIFICATION_SERVICE_URL=http://notification-service:8004

# Timeouts
GW_HTTP_TIMEOUT=10.0
